        <script>
   
   document.addEventListener('DOMContentLoaded', () => {
    const editProductBtn = document.getElementById('editProductBtn');

    // Validation functions
    const isValidProductName = (name) => name && /^[A-Za-z0-9\s]+$/.test(name);
    const isValidDescription = (description) => description && /^[A-Za-z0-9\s]+$/.test(description);
    const isValidPrice = (price) => price && !isNaN(price) && Number(price) > 0;
    const isValidStock = (stock) => stock && !isNaN(stock) && Number(stock) >= 0;
    const isValidCategory = (category) => category && category.trim() !== '';

    // Validate fields on input
    const validateField = (field, validationFn, errorMessage) => {
        const value = field.value.trim();
        if (!validationFn(value)) {
            SweetAlert.fire({
                icon: 'error',
                title: 'Validation Error',
                text: errorMessage,
            });
            return false;
        }
        return true;
    };

    editProductBtn.addEventListener('click', async () => {
        const productIdElement = document.getElementById('productId');
        const productNameElement = document.getElementById('productName');
        const descriptionElement = document.getElementById('description');
        const priceElement = document.getElementById('price');
        const stockElement = document.getElementById('stock');
        const categoryElement = document.getElementById('category');
        


        // Final validation before submitting
        const isProductNameValid = validateField(productNameElement, isValidProductName, 'Product name cannot be empty and must contain only letters and numbers.');
        const isDescriptionValid = validateField(descriptionElement, isValidDescription, 'Description cannot be empty and must contain only letters and numbers.');
        const isPriceValid = validateField(priceElement, isValidPrice, 'Price must be a number greater than zero.');
        const isStockValid = validateField(stockElement,isValidStock, 'Stock must be a non-negative number.')
        const isCategoryValid = validateField(categoryElement, isValidCategory, 'Please select a category.');

        if (!isProductNameValid || !isDescriptionValid || !isPriceValid ||  !isStockValid || !isCategoryValid) {
            return; // Stop execution if any validation fails
        }

        const formData = new FormData();
        formData.append('productId', productIdElement.value);
        formData.append('productName', productNameElement.value);
        formData.append('description', descriptionElement.value);
        formData.append('price', priceElement.value);
        formData.append('stock',stockElement.value);
        formData.append('category', categoryElement.value);
          
       
      
        // Collect files from each image input field
        const imageInputs = [
            document.getElementById('productImage1'),
            document.getElementById('productImage2'),
            document.getElementById('productImage3'),
        ];

        imageInputs.forEach((input) => {
            const files = input.files;
            for (let i = 0; i < files.length; i++) {
                formData.append('images', files[i]);
            }
        });

        
        try {
            const response = await fetch('/admin/editproducts', {
                method: 'POST',
                body: formData,
            });
           console.log('response',response);
            if (!response.ok) {
                const errorText = await response.text();
                console.error('Error response:', errorText);
                throw new Error('Network response was not ok');
            }

            const data = await response.json();
            SweetAlert.fire({
                icon: 'success',
                title: 'Success',
                text: 'Product updated successfully!',
            });
            console.log(data);
        } catch (error) {
            console.error('There was a problem with the fetch operation:', error);
            SweetAlert.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to update product: ' + error.message,
            });
        }
    });
});


        </script>
        




