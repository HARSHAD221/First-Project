                                        <% categories.forEach(function(category) { %>
                                            <option value="<%= category.categoryName %>" <%= product.category === category.categoryName ? "selected" : "" %>><%= category.categoryName %></option>
                                        <% }) %>
                                    </select>
                                    <span id="categoryError" style="color:red;"></span>
                                </div>
                                
                                
                               <!-- Images -->
<div class="mb-4">
    <label class="form-label">Images</label>
    <div class="image-inputs">
        <div class="mb-2">
            <input class="form-control" type="file" id="productImage1" name="images" accept="image/*">
            <span id="image1Error" style="color:red;" class="error-message"></span>
        </div>
        <div class="mb-2">
            <input class="form-control mt-2" type="file" id="productImage2" name="images" accept="image/*">
            <span id="image2Error" style="color:red;" class="error-message"></span>
        </div>
        <div class="mb-2">
           <input class="form-control mt-2" type="file" id="productImage3" name="images" accept="image/*">
            <span id="image3Error" style="color:red;" class="error-message"></span>
        </div>
    </div>

    <!-- Display existing images -->
    <div class="existing-images">
        <% product.imagePaths.forEach(function(imagePath, index) { %>
            <div class="image-container mb-2">
                <!-- Display the existing image using its relative path -->
                <img src="<%= imagePath %>" alt="<%= product.productName %> Image <%= index + 1 %>" width="100" class="product-img">
    
                <!-- Displaying the image file name (formatted for better readability) -->
                <span class="image-filename"><%= imagePath.split('/').pop() %></span>
    
                <!-- Input field for uploading a new image (name attribute includes index for uniqueness) -->
                <input type="file" name="images[<%= index %>]" accept="image/*" class="upload-input">
    
                <!-- Checkbox for removing the image -->
                <label>
                    <input type="checkbox" name="removeImages[]" value="<%= imagePath %>" class="remove-checkbox">
                    Remove
                </label>
    
                <!-- Hidden input to preserve the existing image paths -->
                <input type="hidden" name="existingImagePaths[]" value="<%= imagePath %>">
            </div>
        <% }); %>
