                document.getElementById(menuItems[path]).classList.add('active');
             }
        });
    </script>


    <script>
        // JavaScript to handle listing/unlisting the product using SweetAlert
        async function toggleProductStatus(productId, button) {
            try {
                const response = await fetch(`/admin/products/${productId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
    
                const result = await response.json();
                
                if (result.success) {
                    // Toggle the button class and text
                    const isUnlisted = button.classList.toggle('unlisted');
                    button.textContent = isUnlisted ? 'List' : 'Unlist';
    
                    // Show SweetAlert for success
                    Swal.fire({
                        icon: 'success',
                        title: isUnlisted ? 'Product Unlisted' : 'Product Listed',
                        text: isUnlisted ? 'The product has been successfully unlisted.' : 'The product has been successfully listed.',
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    // Show SweetAlert for failure
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed',
                        text: 'Failed to update product status.',
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            } catch (error) {
                console.error('Error toggling product status:', error);
                
                // Show SweetAlert for error
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while updating the product status.',
                    showConfirmButton: false,
                    timer: 1500
                });
            }
        }
    </script>
