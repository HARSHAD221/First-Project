    <script>

    document.addEventListener('DOMContentLoaded', function () {
   
    const couponName = document.getElementById('couponName');
    const couponCode = document.getElementById('couponCode');
    const couponAmount = document.getElementById('couponAmount');
    const startDate = document.getElementById('startDate');
    const endDate = document.getElementById('endDate');
    const minPurchaseAmt = document.getElementById('minPurchaseAmt');
    const descriptionField = document.getElementById('description');

    // Event listeners for real-time validation
    couponName.addEventListener('input', validateCouponName);
    couponCode.addEventListener('input', validateCouponCode);
    couponAmount.addEventListener('input', validateCouponAmount);
    startDate.addEventListener('input', validateDates);
    endDate.addEventListener('input', validateDates);
    minPurchaseAmt.addEventListener('input', validateMinPurchaseAmount);
    descriptionField.addEventListener('input',validateDescription);

    function validateCouponName() {
        const name = couponName.value.trim();
        const errorElement = document.getElementById('couponNameError');
        const words = name.split(/\s+/);

        if (words.length < 2) {
            errorElement.textContent = "Coupon name must be at least 2 words.";
        } else if (/^\s+$/.test(name)) {
            errorElement.textContent = "Coupon name cannot contain only spaces.";
        } else {
            errorElement.textContent = "";
        }
    }

    function validateCouponCode() {
        const code = couponCode.value.trim();
        const errorElement = document.getElementById('couponCodeError');

        // Check if the code contains at least one letter and one number
        const hasLetters = /[a-zA-Z]/.test(code);
        const hasNumbers = /\d/.test(code);

        if (code.length < 4) {
            errorElement.textContent = "Coupon code must be at least 4 characters long.";
        } else if (!hasLetters || !hasNumbers) {
            errorElement.textContent = "Coupon code must contain both letters and numbers.";
        } else {
            errorElement.textContent = "";
        }
    }

    function validateCouponAmount() {
        const amount = couponAmount.value;
        const errorElement = document.getElementById('couponAmountError');
        if (isNaN(amount) || amount <= 0) {
            errorElement.textContent = "Discount amount must be a positive number.";
        } else {
            errorElement.textContent = "";
        }
    }

    function validateDates() {
        const start = new Date(startDate.value);
        const end = new Date(endDate.value);
        const errorElement = document.getElementById('startDateError');
        const endDateErrorElement = document.getElementById('endDateError');

        if (start >= end) {
            endDateErrorElement.textContent = "End date must be later than the start date.";
        } else {
            endDateErrorElement.textContent = "";
        }
    }

    function validateMinPurchaseAmount() {
        const minAmount = minPurchaseAmt.value;
        const errorElement = document.getElementById('minPurchaseAmtError');
        if (isNaN(minAmount) || minAmount <= 0) {
            errorElement.textContent = "Minimum purchase amount must be a positive number.";
        } else {
            errorElement.textContent = "";
        }
    }
  
    function validateDescription() {
        const description = descriptionField.value.trim();
        const errorElement = document.getElementById('descriptionError');
        const cleanDescription = description.replace(/\s+/g, ' '); // remove excess spaces

        if (cleanDescription.length < 10) {
            errorElement.textContent = "Description must be at least 10 characters long.";
        } else if (cleanDescription.length > 200) {
            errorElement.textContent = "Description must not exceed 200 characters.";
        } else {
            errorElement.textContent = "";
        }
    }

    // On form submission
    document.getElementById('createCouponButton').addEventListener('click', function (event) {
        event.preventDefault();

        // Perform validation on all fields before submission
        validateCouponName();
        validateCouponCode();
        validateCouponAmount();
        validateDates();
        validateMinPurchaseAmount();
        validateDescription();

        // If all fields are valid, proceed to submit the form (you can add additional checks here)
        const allErrors = document.querySelectorAll('.form-text.text-danger');
        let hasError = false;

        allErrors.forEach(function (errorElement) {
            if (errorElement.textContent !== "") {
                hasError = true;
            }
        });

        if (!hasError) {
            // Proceed with form submission
            const formData = {
                name: couponName.value,
                code: couponCode.value,
                amount: couponAmount.value,
                startdate: startDate.value,
                enddate: endDate.value,
                minpurchaseamount: minPurchaseAmt.value,
                description: descriptionField.value.trim()
            };

            fetch('/admin/addCoupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon : 'success',
                        title : 'Success',
                        text : 'Coupon created successfully!',
                        confirmButtonText : 'OK'
                    }).then(()=> {
                        window.location.href = '/admin/coupons';
                    })
                } else {
                    Swal.fire({
                        icon : 'error',
                        title : 'Failed',
                        text : data.message || 'Coupon not created',
                        confirmButtonText : 'OK'
                    })
                }
            })
            .catch(err => {
                Swal.fire({
                        icon : 'error',
                        title : 'Failed',
                        text : data.message || 'Server error while creating coupon.',
                        confirmButtonText : 'OK'
                    })
             
            });
        } else {
            Swal.fire({
                        icon : 'error',
                        title : 'Failed',
                        text : 'Please correct all errors before submitting',
                        confirmButtonText : 'OK'
                    })
        }
    });
});

