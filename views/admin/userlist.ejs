          <!-- Script for highlight the sidebar -->
          <script>
            document.addEventListener('DOMContentLoaded', function () {
                const path = window.location.pathname;
        
                const menuMap = {
                    "dashboard": ["/admin/dashboard"],
                    "users": ["/admin/users"],
                    "orders": ["/admin/orders", "/admin/order-details"],  
                    "products": ["/admin/products"],
                    "categories": ["/admin/categories"],
                    "salesReport": ["/admin/salesReport"],
                    "offers": ["/admin/offers"],
                    "coupons": ["/admin/coupons"]
                };
        
                const menuItems = document.querySelectorAll('.menu-item');
                menuItems.forEach(item => item.classList.remove('active'));  // Remove 'active' from all items
        
                for (const [id, paths] of Object.entries(menuMap)) {
                    if (paths.some(p => path.startsWith(p))) {
                        const element = document.getElementById(id);
                        if (element) {
                            element.classList.add('active'); 
                        }
                        break;
                    }
                }
            });
        </script>



        <script>
          document.addEventListener('DOMContentLoaded', () => {
            attachBlockUnblockListeners();
    // Function to search users
    function searchUsers() {
        // Get the value from the search input field
        const query = document.getElementById('search').value.trim();
        console.log('Search Query:', query); // Check if the query is being fetched properly
        
        if (!query) {
            Swal.fire({
                icon: 'warning',
                title: 'Empty Search',
                text: 'Please enter a search term!',
            });
            return;
        }

        // Send the search request using Fetch API
        fetch(`/admin/search?search=${encodeURIComponent(query)}`)
            .then(response => {
                console.log('Response Status:', response.status); // Check the response status
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                console.log('Search Results:', data); // Check the data returned from the backend
                const users = data.users || []; // Ensure users is an array
                const tableBody = document.getElementById('userTableBody');

                tableBody.innerHTML = '';

                if (users.length === 0) {
                    tableBody.innerHTML = '<tr><td colspan="7">No users found</td></tr>';
                    Swal.fire({
                        icon: 'info',
                        title: 'No Users',
                        text: 'No users matched your search query.',
                    });
                    return;
                }

                users.forEach(user => {
                    const row = `
                        <tr>
                            <td><img src="${user.icon || 'assets/imgs/icons/user.png'}" class="img-avatar" style="width: 50px;" /></td>
                            <td>${user.email}</td>
                            <td>${user.name}</td>
                            <td>${user.phone}</td>
                            <td>${new Date(user.createdAt).toLocaleDateString()}</td>
                            <td class="text-end">
                                <a href="#" data-user-id="${user._id}" class="btn btn-sm block-unblock-btn ${user.is_block ? 'btn-success' : 'btn-danger'}">
                                    ${user.is_block ? 'Unblock' : 'Block'}
                                </a>
                            </td>
                        </tr>
                    `;
                    tableBody.innerHTML += row;
                });

                attachBlockUnblockListeners(); // Reattach listeners after populating the table
            })
            .catch(error => {
                console.error('Error fetching users:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Search Error',
                    text: 'There was a problem with the search request.',
                });
            });
    }
    // Function to attach event listeners to block/unblock buttons
    function attachBlockUnblockListeners() {
        const buttons = document.querySelectorAll('.block-unblock-btn');
        buttons.forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault(); 
                const userId = this.getAttribute('data-user-id');
                const isBlock = this.classList.contains('btn-danger'); 
                blockOrUnblockUser(userId, isBlock);
            });
        });
    }

    // Function to block or unblock a user
    function blockOrUnblockUser(userId, isBlock) {
        const action = isBlock ? 'Block' : 'Unblock'; 

        fetch(`/admin/blockuser/${userId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ action: action }),
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'User Status Updated',
                        text: `User successfully ${action.toLowerCase()}ed.`,
                        ConfirmButton: false,
                       
                    });

                    const button = document.querySelector(`[data-user-id="${userId}"]`);
                    if (isBlock) {
                        button.textContent = 'Unblock';
                        button.classList.remove('btn-danger');
                        button.classList.add('btn-success');
                    } else {
                        button.textContent = 'Block';
                        button.classList.remove('btn-success');
                        button.classList.add('btn-danger');
                    }
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Update Failed',
                        text: 'Unable to update user status!',
                    });
                }
            })
            .catch(error => {
                console.error('Error during block/unblock fetch:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Block/Unblock Error',
                    text: 'An error occurred while trying to update user status.',
                });
            });
    }

    // Attach event listeners to search elements
    document.getElementById('searchButton').addEventListener('click', searchUsers);
    document.getElementById('search').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') {
            searchUsers();
        }
    });
});

