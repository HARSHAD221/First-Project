   // Function to validate product name (no symbols allowed)
function validateProductName() {
    const productName = document.getElementById('productName').value.trim();
    const errorMessageElement = document.getElementById('productNameError');
    const nameRegex = /^[a-zA-Z0-9\s]+$/; // Only letters, numbers, and spaces

    if (!productName) {
        errorMessageElement.textContent = 'Product name is required.';
    } else if (!nameRegex.test(productName)) {
        errorMessageElement.textContent = 'Product name should only contain letters, numbers, and spaces.';
    } else {
        errorMessageElement.textContent = ''; // Clear error message if valid
    }
}

// Function to validate description (no symbols allowed)
function validateDescription() {
    const description = document.getElementById('description').value.trim();
    const errorMessageElement = document.getElementById('descriptionError');
    const descRegex = /^[a-zA-Z0-9\s,.]+$/; // Letters, numbers, spaces, commas, periods

    if (!description) {
        errorMessageElement.textContent = 'Description is required.';
    } else if (!descRegex.test(description)) {
        errorMessageElement.textContent = 'Description should only contain valid characters (letters, numbers, spaces, commas, periods).';
    } else {
        errorMessageElement.textContent = ''; // Clear error message if valid
    }
}

// Function to validate price (no negative values or zero)
function validatePrice() {
    const price = document.getElementById('price').value.trim();
    const errorMessageElement = document.getElementById('priceError');
    if (!price || isNaN(price) || price <= 0) {
        errorMessageElement.textContent = 'Valid price is required (greater than 0).';
    } else {
        errorMessageElement.textContent = ''; // Clear error message if valid
    }
}

// Function to validate stock (only positive integers)
function validateStock() {
    const stock = document.getElementById('stock').value.trim();
    const errorMessageElement = document.getElementById('stockError');
    
    // Check if stock is empty
    if (stock === '') {
        errorMessageElement.textContent = 'Stock quantity is required.';
    }
    // Check if stock is a number
    else if (isNaN(stock)) {
        errorMessageElement.textContent = 'Stock must be a number.';
    }
    // Check if stock is a valid positive integer
    else if (!Number.isInteger(Number(stock)) || Number(stock) < 0) {
        errorMessageElement.textContent = 'Stock must be a positive integer.';
    } else {
        errorMessageElement.textContent = ''; // Clear error message if valid
    }
}

// Function to validate category (should not be empty)
function validateCategory() {
    const category = document.getElementById('category').value;
    const errorMessageElement = document.getElementById('categoryError');
    if (!category) {
        errorMessageElement.textContent = 'Category is required.';
    } else {
        errorMessageElement.textContent = ''; // Clear error message if valid
    }
}

// Function to validate images (at least one image required)
function validateImages() {
    const images = document.getElementById('productImages').files;
    const errorMessageElement = document.getElementById('imagesError');
    if (images.length === 0) {
        errorMessageElement.textContent = 'At least one image is required.';
    } else {
        errorMessageElement.textContent = ''; // Clear error message if valid
    }
}

