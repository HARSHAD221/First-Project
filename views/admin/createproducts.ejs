<!-- JavaScript for Cropping -->
<script>    
console.log('reached for cropper');
let cropper;
let currentImageIndex = 0; // Tracks the current image being cropped
let croppedFiles = []; // Array to store cropped images as blobs
let imageFiles = []; // Array of uploaded image files

// Triggered when the user selects files
document.getElementById('productImages').addEventListener('change', function (event) {
    imageFiles = Array.from(event.target.files); // Convert FileList to an Array
    currentImageIndex = 0; // Start with the first image

    if (imageFiles.length > 0) {
        loadAndShowCropModal(imageFiles[currentImageIndex]); // Start cropping with the first image
    }
});

// Load and display the cropper modal with the selected image
function loadAndShowCropModal(file) {
    const reader = new FileReader();

    reader.onload = function (e) {
        const imageElement = document.getElementById('imagePreview');
        imageElement.src = e.target.result; // Load the image into the modal

        // Show the modal
        $('#cropImageModal').modal('show');

        // Destroy any existing cropper instance
        if (cropper) {
            cropper.destroy();
        }

        // Initialize the cropper
        cropper = new Cropper(imageElement, {
            aspectRatio: 3 / 4, // Set your desired aspect ratio
            viewMode: 1,       // Restrict the crop box to stay within the image
            autoCropArea: 0.8, // Crop box size as a fraction of the image
        });
    };

    reader.onerror = function (error) {
        console.error('Error loading image:', error);
        closeModal();
    };

    reader.readAsDataURL(file); // Read the image file as a data URL
}

// Triggered when the "Crop" button is clicked
document.getElementById('cropImageButton').addEventListener('click', function () {
    if (cropper) {
        cropper.getCroppedCanvas({ width: 300, height: 400 }).toBlob(function (blob) {
            if (!blob) {
                console.error('Failed to create blob from cropped canvas.');
                return;
            }

            // Store the cropped blob
            croppedFiles.push(new File([blob], imageFiles[currentImageIndex].name, { type: blob.type }));

            // Move to the next image or close the modal
            currentImageIndex++;
            if (currentImageIndex < imageFiles.length) {
                loadAndShowCropModal(imageFiles[currentImageIndex]);
            } else {
                console.log('All images processed.');
                closeModal();
            }
        }, 'image/jpeg'); // You can change the format if needed
    } else {
        console.warn('No cropper instance available.');
    }
});

// Close the modal and clean up
function closeModal() {
    $('#cropImageModal').modal('hide'); // Hide the modal
    if (cropper) {
        cropper.destroy(); // Destroy the cropper instance
        cropper = null;
    }
}



</script>


